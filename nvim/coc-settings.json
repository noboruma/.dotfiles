{
    "java.home": "/local/usr/bin/brew/Cellar/openjdk/1.8.0-181",
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
